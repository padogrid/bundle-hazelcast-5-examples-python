<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

	<id>bundle-assembly</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>${project.name}</baseDirectory>

	<!-- Include README.md in the 'bundles' directory so that it can be referenced 
	     after the bundle is installed. -->
	<files>
		<file>
			<source>README.md</source>
			<outputDirectory>bundles/</outputDirectory>
			<destName>${project.name}-README.md</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>apps</directory>
			<outputDirectory>apps</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<!-- Executable permissions -->
		<fileSet>
			<directory>apps/python_examples/bin_sh/</directory>
			<outputDirectory>apps/python_examples/bin_sh/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
</assembly>
